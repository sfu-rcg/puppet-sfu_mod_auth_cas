 <IfModule mod_auth_cas.c>
      CASVersion 2
      CASValidateServer <%= @cas_validate_server %>
      CASCertificatePath <%= @ca_cert_bundle_path %>
      CASAllowWildcardCert <%= @cas_allow_wildcard_cert %>
      CASLoginURL <%= @cas_login_url %>
      CASValidateURL <%= @cas_validate_url %>
      CASTicketsURL <%= @cas_tickets_url %>
      CASCookiePath <%= @cas_cookie_path %>
      <% if @cas_root_proxied_as %>CASRootProxiedAs <%= @cas_root_proxied_as %><% end %>
 </IfModule>
